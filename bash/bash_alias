alias asdf='setxkbmap -variant colemak && xset r 66 && xset r rate 191'
alias arst='setxkbmap -variant ,'
alias reboot='sudo reboot'
alias shutdown='sudo shutdown'
alias q='exit'
alias :q='echo "you have exited vim but okay" && sleep 1 && exit'
alias c='clear'
alias grep='grep --color=auto'
alias ls='ls --color=auto'
alias ll='ls -lv --color=auto'
alias la='ls -lav --ignore=. --color=auto'
alias lll='ls -lavhrst --ignore=.  --color=auto'
